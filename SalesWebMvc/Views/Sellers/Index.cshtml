<!--Declarando um objeto model
    O model vai correspoder ao argumento que foi passado para view-->
@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>
                <!--Renderiza o nome do atributo-->
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Seller seller in Model)
        {
            <tr>
                <td>
                    <!--Renderiza o conteúdo da lista-->
                    @Html.DisplayFor(modelItem => seller.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@seller.Id">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

